<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rate this App"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hi, Thanks for using MDT. Please take a minute to rate this app and help us to improve the features"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_rating_never"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Never"
                android:textColor="@color/colorPrimaryHome"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"

            android:foreground="?attr/selectableItemBackground"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_rating_notnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not now"
                android:textColor="@color/colorPrimaryHome"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_rating_ratenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate it"
                android:textColor="@color/colorPrimaryHome"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>